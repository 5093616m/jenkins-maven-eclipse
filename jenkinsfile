pipeline{
	agent any
	tools {
		maven "maven3.9.6"
		jdk "OpenJDK11"
	}
	environment {
    PATH = "C:\\WINDOWS\\SYSTEM32"
	}
	stages{
		stage("clean"){
			steps{
			echo "Start Clean"
			bat "mvn clean"
			}
		  }
		stage("test"){
			steps{
			echo "Start Test"
			bat "mvn test"
			}
		  }
		stage("build"){
			steps{
			echo "Start build"
			bat "mvn install -DskipTests"
			}
		  }
		stage("build & SonarQube analysis") {
            steps{
              withSonarQubeEnv('My SonarQube Server') {
                bat "mvn clean package sonar:sonar"
             }
           }
          }
        stage("Quality Gate") {
            steps{
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
             }
           }
          }
	}
}